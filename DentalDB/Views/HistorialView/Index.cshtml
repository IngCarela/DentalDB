<br />
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(m=>m.Nombre)</th>
        <th>@Html.DisplayNameFor(m=>m.Apellido)</th>
        <th>@Html.DisplayNameFor(m=>m.AntecedentesPatologicos)</th>
        <th>@Html.DisplayNameFor(m=>m.Tratamiento)</th>
        <th>@Html.DisplayNameFor(m=>m.Monto)</th>
        <th>@Html.DisplayNameFor(m=>m.Abono)</th>
        <th>@Html.DisplayNameFor(m=>m.Faltante)</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Nombre
        </td>
        <td>
            @item.Apellido
        </td>
        <td>
            @item.AntecedentesPatologicos
        </td>
        <td>
            @item.Tratamiento
        </td>
        <td>
            @item.Monto
        </td>
        <td>
            @item.Abono
        </td>
        <td>
            @item.Faltante
        </td>
        
    </tr>
}

</table>
